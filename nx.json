{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "install:all": {
      "cache": false,
      "dependsOn": ["install:tools", "install:dependencies"]
    },
    "install:tools": {
      "cache": false
    },
    "install:dependencies": {
      "cache": false
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["build", "^build"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/tsconfig.build.tsbuildinfo"
      ]
    },
    "test": {
      "cache": true,
      "inputs": ["test"]
    },
    "test:coverage": {
      "cache": true,
      "inputs": ["test"]
    },
    "package": {
      "cache": true,
      "inputs": ["package", "^package"],
      "outputs": ["{projectRoot}/bundle"]
    },
    "clean": {
      "cache": false
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/.tool-versions",
      "{workspaceRoot}/jest.config.base.ts",
      "{workspaceRoot}/jest.config.ts",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/webpack.config.base.ts"
    ],
    "build": [
      "default",
      "!{workspaceRoot}/jest.config.base.ts",
      "!{workspaceRoot}/jest.config.ts",
      "!{workspaceRoot}/tsconfig.json",
      "!{workspaceRoot}/webpack.config.base.ts",
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/tsconfig.json"
    ],
    "test": ["default"],
    "package": [
      "default",
      "!{workspaceRoot}/jest.config.base.ts",
      "!{workspaceRoot}/jest.config.ts",
      "!{workspaceRoot}/tsconfig.json",
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/tsconfig.json"
    ]
  }
}
